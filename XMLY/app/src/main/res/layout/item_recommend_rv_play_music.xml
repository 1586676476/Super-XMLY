<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_head_recommend_rv_activity_play_music"
        android:src="@mipmap/ic_launcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_title_recommend_rv_activity_play_music"
        android:layout_alignTop="@id/iv_head_recommend_rv_activity_play_music"
        android:layout_toRightOf="@id/iv_head_recommend_rv_activity_play_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_introduction_commend_rv_acy_play_music"
        android:layout_below="@id/tv_title_recommend_rv_activity_play_music"
        android:layout_toRightOf="@id/iv_head_recommend_rv_activity_play_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>