        android:layout_below="@id/discover_recycleView_three_leftImage"/>

    <ImageView
        android:id="@+id/discover_recycleView_three_rightImageTwo"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_toLeftOf="@id/three_imageView"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/discover_recycleView_three_leftImage"
        />
    <TextView
        android:id="@+id/discover_recycleView_three_rightTextTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/discover_recycleView_three_rightImage"
        android:layout_marginTop="18dp"
        android:layout_marginRight="10dp"
        android:text="雷明教你读懂BOSS的心"
        android:textSize="10sp"
        android:layout_below="@id/discover_recycleView_three_leftImage"/>

    <ImageView
        android:id="@+id/discover_recycleView_three_leftImageThree"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/discover_recycleView_three_leftImageTwo"
        />

    <TextView
        android:id="@+id/discover_recycleView_three_leftTextThree"
