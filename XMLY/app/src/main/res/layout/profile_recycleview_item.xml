<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/profile_recycleView_item_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:layout_margin="20dp"/>

    <TextView
        android:id="@+id/profile_recycleView_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123"
        android:layout_toRightOf="@id/profile_recycleView_item_image"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/profile_recycleView_item_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="456"
        android:layout_toRightOf="@id/profile_recycleView_item_image"
        android:layout_below="@id/profile_recycleView_item_title"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:id="@+id/profile_recycleView_item_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="789"
        android:layout_toRightOf="@id/profile_recycleView_item_image"
        android:layout_below="@id/profile_recycleView_item_first"/>


</RelativeLayout>