<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="100dp"

    >
  <ImageView
      android:id="@+id/iv_singer_item_famous"
      android:layout_gravity="center_vertical"
      android:layout_width="80dp"
      android:layout_height="match_parent" />
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_name_singer_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_sounds_count_item"
                android:drawableLeft="@mipmap/ic_item_sounds_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_fans_item"
                android:drawableLeft="@mipmap/icon_by_fans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_follow_item"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/follow_new_btn_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>