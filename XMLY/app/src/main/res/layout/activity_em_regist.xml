<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"

    >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:layout_gravity="center_vertical"
            android:src="@mipmap/arrow_orange_normal_left"
            android:id="@+id/iv_back_EM_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginRight="20dp"
            android:textSize="20sp"
            android:gravity="center"
            android:text="注册"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

    </LinearLayout>

    <EditText
        android:id="@+id/et_user_name_aty_em"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:drawableLeft="@mipmap/ic_login_username" />

    <EditText
        android:id="@+id/et_password_aty_em"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/ic_password" />
    <Button
        android:id="@+id/btn_register_aty_em"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:background="#f88"
        android:text="注册"
        android:textColor="@color/White"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />





</LinearLayout>