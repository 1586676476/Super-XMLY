       android:layout_height="30dp" />
    <TextView
        android:layout_marginLeft="20dp"
        android:id="@+id/tv_icon_item_fragment_list"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

</LinearLayout>